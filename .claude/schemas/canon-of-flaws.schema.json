{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "sigil-v3/canon-of-flaws",
  "title": "Canon of Flaws Schema",
  "description": "Soul Binder - Protected emergent behaviors",
  "type": "object",
  "required": ["version", "flaws"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+$"
    },
    "last_updated": {
      "type": ["string", "null"],
      "format": "date-time"
    },
    "flaws": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "status"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^FLAW-[0-9]+$"
          },
          "name": {
            "type": "string",
            "minLength": 1
          },
          "description": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": ["PROTECTED", "CANDIDATE", "RETIRED"]
          },
          "discovered_at": {
            "type": "string",
            "format": "date-time"
          },
          "protected_at": {
            "type": "string",
            "format": "date-time"
          },
          "usage_percent": {
            "type": "number",
            "minimum": 0,
            "maximum": 100
          },
          "community_attachment": {
            "type": "boolean"
          },
          "affected_components": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "canonization_criteria": {
      "type": "object",
      "properties": {
        "usage_threshold_percent": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        },
        "requires_community_attachment": {
          "type": "boolean"
        }
      }
    }
  }
}
