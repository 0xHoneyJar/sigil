{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "sigil-v3/decision",
  "title": "Decision Record Schema",
  "description": "Consultation Chamber - Individual decision record",
  "type": "object",
  "required": ["id", "layer", "status", "created_at"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^DEC-[0-9]+$"
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string"
    },
    "layer": {
      "type": "string",
      "enum": ["strategic", "direction", "execution"]
    },
    "status": {
      "type": "string",
      "enum": ["pending", "locked", "unlocked", "expired"]
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "locked_at": {
      "type": ["string", "null"],
      "format": "date-time"
    },
    "unlock_at": {
      "type": ["string", "null"],
      "format": "date-time"
    },
    "decision_value": {
      "type": ["string", "object"]
    },
    "rationale": {
      "type": "string"
    },
    "taste_owner": {
      "type": "string"
    },
    "affected_paths": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "history": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "timestamp": {
            "type": "string",
            "format": "date-time"
          },
          "action": {
            "type": "string"
          },
          "by": {
            "type": "string"
          }
        }
      }
    }
  }
}
