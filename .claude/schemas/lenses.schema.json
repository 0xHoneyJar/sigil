{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "sigil-v3/lenses",
  "title": "Lenses Schema",
  "description": "Lens Array - User persona definitions for multi-truth validation",
  "type": "object",
  "required": ["version"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+$"
    },
    "generated_at": {
      "type": ["string", "null"],
      "format": "date-time"
    },
    "lenses": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": ["name", "priority"],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "description": {
            "type": "string"
          },
          "priority": {
            "type": "integer",
            "minimum": 1,
            "description": "Lower = more constrained = truth test"
          },
          "constraints": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string"
                },
                "value": {
                  "type": ["string", "number", "boolean"]
                }
              }
            }
          },
          "validation_rules": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "immutable_properties": {
      "type": "object",
      "properties": {
        "description": {
          "type": "string"
        },
        "properties": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name"],
            "properties": {
              "name": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "stacking": {
      "type": "object",
      "properties": {
        "allowed_combinations": {
          "type": "array",
          "items": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "conflict_resolution": {
          "type": "object",
          "properties": {
            "priority_order": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}
