{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://sigil.dev/schemas/decision.schema.json",
  "title": "Sigil Decision",
  "description": "A locked decision from the Consultation Chamber. After deliberation, lock decisions to prevent bikeshedding.",
  "type": "object",
  "required": ["id", "topic", "decision", "scope", "locked_at", "locked_by", "expires_at", "rationale", "status"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique decision identifier (e.g., 'DEC-2026-001')",
      "pattern": "^DEC-\\d{4}-\\d{3}$"
    },
    "topic": {
      "type": "string",
      "description": "What the decision is about"
    },
    "decision": {
      "type": "string",
      "description": "The actual decision made"
    },
    "scope": {
      "type": "string",
      "description": "Decision scope determines lock duration",
      "enum": ["strategic", "direction", "execution"]
    },
    "locked_at": {
      "type": "string",
      "description": "ISO8601 timestamp when decision was locked",
      "format": "date-time"
    },
    "locked_by": {
      "type": "string",
      "description": "Who locked the decision"
    },
    "expires_at": {
      "type": "string",
      "description": "ISO8601 timestamp when lock expires",
      "format": "date-time"
    },
    "context": {
      "$ref": "#/definitions/DecisionContext"
    },
    "rationale": {
      "type": "string",
      "description": "Why this decision was made"
    },
    "status": {
      "type": "string",
      "description": "Current status of the decision",
      "enum": ["locked", "unlocked", "expired"]
    },
    "unlock_history": {
      "type": "array",
      "description": "History of unlock events",
      "items": {
        "$ref": "#/definitions/UnlockEvent"
      }
    }
  },
  "definitions": {
    "DecisionContext": {
      "type": "object",
      "description": "Context for the decision",
      "properties": {
        "zone": {
          "type": "string",
          "description": "Relevant zone (e.g., 'critical', 'marketing')"
        },
        "moodboard_ref": {
          "type": "string",
          "description": "Reference to moodboard section"
        },
        "files": {
          "type": "array",
          "description": "Relevant file paths",
          "items": {
            "type": "string"
          }
        },
        "options_considered": {
          "type": "array",
          "description": "Options that were considered",
          "items": {
            "$ref": "#/definitions/ConsideredOption"
          }
        }
      }
    },
    "ConsideredOption": {
      "type": "object",
      "required": ["option"],
      "properties": {
        "option": {
          "type": "string",
          "description": "The option that was considered"
        },
        "pros": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "cons": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "UnlockEvent": {
      "type": "object",
      "required": ["unlocked_at", "unlocked_by", "justification"],
      "properties": {
        "unlocked_at": {
          "type": "string",
          "description": "ISO8601 timestamp when unlocked",
          "format": "date-time"
        },
        "unlocked_by": {
          "type": "string",
          "description": "Who unlocked the decision"
        },
        "justification": {
          "type": "string",
          "description": "Why the decision was unlocked"
        }
      }
    }
  }
}
