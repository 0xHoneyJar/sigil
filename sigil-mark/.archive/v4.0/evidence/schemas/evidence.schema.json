{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://sigil.dev/schemas/evidence.schema.json",
  "title": "Sigil Evidence Schema v4.0",
  "description": "Schema for evidence files that support persona and zone definitions. Evidence comes from analytics, interviews, GTM documents, or behavioral observation.",
  "type": "object",
  "required": ["source", "collected_at"],
  "properties": {
    "source": {
      "type": "string",
      "description": "Type of evidence source",
      "enum": ["analytics", "interview", "gtm", "observation"]
    },
    "collected_at": {
      "type": "string",
      "description": "ISO date when evidence was collected",
      "format": "date"
    },
    "period": {
      "type": "string",
      "description": "Time period covered by this evidence (e.g., '2025-12-15 to 2026-01-15')"
    },
    "description": {
      "type": "string",
      "description": "Brief description of what this evidence represents"
    },
    "metrics": {
      "type": "array",
      "description": "Quantitative metrics from analytics",
      "items": {
        "$ref": "#/definitions/Metric"
      }
    },
    "insights": {
      "type": "array",
      "description": "Qualitative insights derived from the evidence",
      "items": {
        "type": "string"
      }
    },
    "quotes": {
      "type": "array",
      "description": "Direct quotes from interviews or observations",
      "items": {
        "$ref": "#/definitions/Quote"
      }
    },
    "behavioral_signals": {
      "type": "array",
      "description": "Behavioral patterns observed",
      "items": {
        "$ref": "#/definitions/BehavioralSignal"
      }
    },
    "applies_to": {
      "type": "object",
      "description": "What this evidence applies to",
      "properties": {
        "personas": {
          "type": "array",
          "description": "Persona IDs this evidence supports",
          "items": {
            "type": "string"
          }
        },
        "zones": {
          "type": "array",
          "description": "Zone IDs this evidence supports",
          "items": {
            "type": "string"
          }
        },
        "journey_stages": {
          "type": "array",
          "description": "Journey stages this evidence supports",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "tags": {
      "type": "array",
      "description": "Tags for categorization and discovery",
      "items": {
        "type": "string"
      }
    }
  },
  "definitions": {
    "Metric": {
      "type": "object",
      "required": ["key", "value"],
      "properties": {
        "key": {
          "type": "string",
          "description": "Metric identifier (e.g., 'total_depositors', 'avg_session_duration')"
        },
        "value": {
          "description": "Metric value (number, string, or object for complex values)",
          "oneOf": [
            { "type": "number" },
            { "type": "string" },
            { "type": "object" }
          ]
        },
        "label": {
          "type": "string",
          "description": "Human-readable label for the metric"
        },
        "unit": {
          "type": "string",
          "description": "Unit of measurement (e.g., 'users', 'seconds', '%')"
        },
        "comparison": {
          "type": "object",
          "description": "Comparison with previous period",
          "properties": {
            "previous_value": {
              "type": "number"
            },
            "change_percent": {
              "type": "number"
            },
            "trend": {
              "type": "string",
              "enum": ["up", "down", "stable"]
            }
          }
        }
      }
    },
    "Quote": {
      "type": "object",
      "required": ["text"],
      "properties": {
        "text": {
          "type": "string",
          "description": "The quote text"
        },
        "source": {
          "type": "string",
          "description": "Source attribution (e.g., 'User Interview #12', 'Support Ticket')"
        },
        "persona_hint": {
          "type": "string",
          "description": "Persona this quote likely represents"
        },
        "sentiment": {
          "type": "string",
          "description": "Sentiment of the quote",
          "enum": ["positive", "negative", "neutral", "frustrated", "delighted"]
        }
      }
    },
    "BehavioralSignal": {
      "type": "object",
      "required": ["signal", "observation"],
      "properties": {
        "signal": {
          "type": "string",
          "description": "Name of the behavioral signal (e.g., 'rage_clicking', 'information_seeking')"
        },
        "observation": {
          "type": "string",
          "description": "What was observed"
        },
        "frequency": {
          "type": "string",
          "description": "How often this was observed",
          "enum": ["rare", "occasional", "frequent", "constant"]
        },
        "context": {
          "type": "string",
          "description": "Context where this behavior was observed"
        },
        "recommendation": {
          "type": "string",
          "description": "Recommended action based on this signal"
        }
      }
    }
  }
}
