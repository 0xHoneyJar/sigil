{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://sigil.dev/schemas/vocabulary.schema.json",
  "title": "Sigil Vocabulary Schema",
  "description": "Maps product terms to design recommendations (the API surface)",
  "type": "object",
  "required": ["version", "terms"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Schema version"
    },
    "terms": {
      "type": "object",
      "description": "Map of term ID to term definition",
      "additionalProperties": {
        "$ref": "#/definitions/VocabularyTerm"
      }
    }
  },
  "definitions": {
    "VocabularyTerm": {
      "type": "object",
      "required": ["engineering_name", "user_facing", "mental_model", "recommended", "zones"],
      "properties": {
        "engineering_name": {
          "type": "string",
          "description": "Internal engineering identifier (e.g., 'savings_container')"
        },
        "user_facing": {
          "type": "string",
          "description": "User-facing display name (e.g., 'Pot', 'Vault')"
        },
        "mental_model": {
          "type": "string",
          "description": "Description of the mental model this term evokes"
        },
        "recommended": {
          "$ref": "#/definitions/TermFeel",
          "description": "Recommended feel for this term"
        },
        "zones": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Zones where this term typically appears"
        }
      }
    },
    "TermFeel": {
      "type": "object",
      "required": ["material", "motion", "tone"],
      "properties": {
        "material": {
          "type": "string",
          "enum": ["glass", "machinery", "decisive"],
          "description": "Visual material for the term"
        },
        "motion": {
          "type": "string",
          "enum": ["warm", "deliberate", "snappy", "celebratory_then_deliberate", "reassuring"],
          "description": "Motion style for interactions"
        },
        "tone": {
          "type": "string",
          "enum": ["friendly", "serious", "exciting", "reassuring"],
          "description": "Tone of copy and messaging"
        }
      }
    }
  }
}
