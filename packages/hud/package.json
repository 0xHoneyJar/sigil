{
  "name": "@sigil/hud",
  "version": "0.1.0",
  "description": "Diagnostic HUD for Sigil - composable React components for development",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "zustand": "^4.5.0"
  },
  "peerDependencies": {
    "react": ">=18.0.0"
  },
  "optionalDependencies": {
    "@sigil/anchor": "workspace:*",
    "@sigil/fork": "workspace:*",
    "@sigil/simulation": "workspace:*",
    "@sigil/lens": "workspace:*",
    "@sigil/diagnostics": "workspace:*"
  },
  "devDependencies": {
    "@sigil/anchor": "workspace:*",
    "@sigil/fork": "workspace:*",
    "@sigil/simulation": "workspace:*",
    "@sigil/lens": "workspace:*",
    "@sigil/diagnostics": "workspace:*",
    "@types/react": "^18.0.0",
    "react": "^18.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "sideEffects": false,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/thj/sigil.git",
    "directory": "packages/hud"
  }
}
