{
  "name": "@thehoneyjar/sigil-hud",
  "version": "0.3.0",
  "description": "Diagnostic HUD for Sigil - composable React components for development",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./wagmi": {
      "types": "./dist/wagmi/index.d.ts",
      "import": "./dist/wagmi/index.js"
    }
  },
  "typesVersions": {
    "*": {
      "wagmi": ["./dist/wagmi/index.d.ts"]
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "dompurify": "^3.0.0",
    "zustand": "^4.5.0"
  },
  "peerDependencies": {
    "react": ">=18.0.0"
  },
  "peerDependenciesMeta": {
    "wagmi": {
      "optional": true
    },
    "viem": {
      "optional": true
    }
  },
  "optionalDependencies": {
    "@thehoneyjar/sigil-anchor": "^4.3.0",
    "@thehoneyjar/sigil-fork": "^0.1.0",
    "@thehoneyjar/sigil-simulation": "^0.1.0",
    "@thehoneyjar/sigil-lens": "^0.1.0",
    "@thehoneyjar/sigil-diagnostics": "^0.1.0"
  },
  "devDependencies": {
    "@types/dompurify": "^3.0.0",
    "@thehoneyjar/sigil-anchor": "workspace:*",
    "@thehoneyjar/sigil-fork": "workspace:*",
    "@thehoneyjar/sigil-simulation": "workspace:*",
    "@thehoneyjar/sigil-lens": "workspace:*",
    "@thehoneyjar/sigil-diagnostics": "workspace:*",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "react": "^18.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "wagmi": "^2.0.0",
    "viem": "^2.0.0"
  },
  "sideEffects": false,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/0xHoneyJar/rune.git",
    "directory": "packages/hud"
  },
  "homepage": "https://github.com/0xHoneyJar/rune/tree/main/packages/hud#readme",
  "bugs": {
    "url": "https://github.com/0xHoneyJar/rune/issues"
  },
  "keywords": [
    "sigil",
    "hud",
    "diagnostic",
    "devtools",
    "react",
    "web3",
    "agentation",
    "user-lens"
  ]
}
