{
  "name": "eslint-plugin-sigil",
  "version": "7.6.0",
  "description": "ESLint plugin for Sigil design system enforcement - The Living Canon",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --clean",
    "dev": "tsup src/index.ts --format esm,cjs --dts --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "eslint": ">=8.0.0"
  },
  "dependencies": {
    "@typescript-eslint/utils": "^6.0.0",
    "minimatch": "^9.0.0",
    "yaml": "^2.4.0"
  },
  "devDependencies": {
    "@types/eslint": "^8.56.0",
    "@types/node": "^20.11.0",
    "eslint": "^8.57.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  },
  "keywords": [
    "eslint",
    "eslint-plugin",
    "sigil",
    "design-system",
    "tailwind",
    "framer-motion",
    "zone-compliance"
  ],
  "author": "Sigil Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sigil/eslint-plugin-sigil.git"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
