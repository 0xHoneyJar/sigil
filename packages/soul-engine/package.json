{
  "name": "@sigil/soul-engine",
  "version": "0.4.0",
  "description": "Design context framework with Material physics, Tension controls, and Sync routing for AI-assisted product development",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "sigil": "./bin/sigil.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./material": {
      "types": "./dist/material/index.d.ts",
      "import": "./dist/material/index.js",
      "require": "./dist/material/index.cjs"
    },
    "./sync": {
      "types": "./dist/sync/index.d.ts",
      "import": "./dist/sync/index.js",
      "require": "./dist/sync/index.cjs"
    },
    "./hooks": {
      "types": "./dist/hooks/index.d.ts",
      "import": "./dist/hooks/index.js",
      "require": "./dist/hooks/index.cjs"
    },
    "./workbench": {
      "types": "./dist/workbench/index.d.ts",
      "import": "./dist/workbench/index.js",
      "require": "./dist/workbench/index.cjs"
    }
  },
  "files": [
    "dist",
    "bin",
    "templates"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts,.tsx",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "dependencies": {
    "commander": "^12.0.0",
    "sql.js": "^1.10.0",
    "yaml": "^2.4.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "keywords": [
    "sigil",
    "soul-engine",
    "design-system",
    "ui-physics",
    "material-design",
    "tension-controls",
    "sync-strategy",
    "react",
    "claude",
    "ai-assisted"
  ],
  "author": "Sigil Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sigil/soul-engine.git"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
